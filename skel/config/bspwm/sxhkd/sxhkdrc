##---------- Keybindings for apps ----------##

# Code
super + F2
	atom

# Atom
super + shift + F2
	code

#Inkscape
super + F3
    inkscape

#Gimp
super + F4
    gimp

#Meld
super + F5
    meld

#GnuCash
super + F6
    gnucash

#KeePassXC
super + F7
    keepassxc

#Spotify
super + F8
    com.spotify.Client

#Typora
super + F9
    typora

#Firefox
super + F10
    firefox-developer-edition

#Firefox
super + shift + F10
    firefox-developer-edition --private-window

#Microsoft Edge
super + F11
    microsoft-edge-stable --profile-directory='Default'

#Microsoft Edge
super + shift + F11
    microsoft-edge-stable --profile-directory='Profile 1'

#Chrome Primary
super + F12
    google-chrome-stable --profile-directory='Default'

#Chrome Secondary
super + shift F12
    google-chrome-stable --profile-directory='Profile 1'

##---------- Keybindings for bspwm ----------##

# Terminal (alacritty)
super + Return
	rofi-sensible-terminal

# File Manager
super + shift + Return
	thunar

# Terminal (fullscreen)
super + t
	rofi-sensible-terminal

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
super + space
	sh ~/.config/bspwm/rofi/bin/launcher

# Rofi Term Launcher
super + shift + space
	sh ~/.config/bspwm/rofi/bin/launcher-term

# Rofi Network Menu
super + n
	nmd

# Rofi Themes Menu
ctrl + alt + t
	sh ~/.config/bspwm/rofi/bin/themes

# Rofi Menus/Applets
super + {w,m,x,r,s,i}
	sh ~/.config/bspwm/rofi/bin/{windows,mpd,powermenu-archcraft,asroot,screenshot,network}

##---------- Applications ----------##

# Launch Apps
super + shift + {f,w,e}
	{thunar,firefox,atom}

# Terminal Apps
ctrl + alt + {v,n,r,h,b}
	alacritty --config-file ~/.config/bspwm/alacritty/alacritty.yml -e {vim,nvim,ranger,htop,bashtop}

# Color Picker
super + p
	color-gpick

# Lockscreen
ctrl + alt + l
    bsplock

##---------- System Keys ----------##

# Take a screenshot
Print
	takeshot --now

# Take screenshot in 5 second
alt + Print
	takeshot --in5

# Take screenshot in 10 second
shift + Print
	takeshot --in10

# Take screenshot of active window
ctrl + Print
	takeshot --win

# Take screenshot of area
ctrl + alt + Print
	takeshot --area

# Brighness control
XF86MonBrightness{Up,Down}
	brightness{ --inc, --dec}

# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	volume{ --inc, --dec}

XF86AudioMute
	volume --toggle

# Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

##---------- Bspwm ----------##

# Close App
super + {_,shift + }c
	bspc node -{c,k}

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# kill window
ctrl + alt + Escape
    xkill

# Quit/Restart bspwm
ctrl + shift + {q,r}
	bspc {quit,wm -r}

# Split horizontal, vertical or cancel
super + {h,v,q}
	bspc node -p {east,south,cancel}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Fullscreen or Monocle
super + f
#	bspc desktop -l next
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + backslash
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + shift + backslash
#super + {p,t}
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# focus send the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch workspace
ctrl + alt + {Left,Right}
	bspc desktop -f {prev,next}.occupied

# Switch to last opened workspace
super + {Tab,grave}
	bspc {node,desktop} -f last

# Move focused window to other monitor
super + shift + {comma,period}
	bspc node -m {prev,next} --follow

# focus the next/previous desktop all monitors
super + {Prior,Next}
	bspc desktop -f {prev,next}

# Swap windows by direction
super + shift + {Prior,Next}
	bspc node -d {prev,next} --follow

# Send focused window to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'

# Expanding windows
super + control + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}

## Shrinking windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}

## Move floating windows
alt + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Hide/Unhide Window
super + shift + i
	winmask

##---------- EOF ----------##
